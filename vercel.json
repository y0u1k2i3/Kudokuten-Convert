{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "vite",
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "api/**/*", "use": "@vercel/python" }
  ],
  "routes": [
    { "handle": "filesystem" },

    { "src": "/api/(.*)", "dest": "/api/$1" },

    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
